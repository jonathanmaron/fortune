{
    "name": "jonathanmaron/fortune",
    "type": "project",
    "description": "Unix-style fortune program that displays a random quotation.",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^7.4",
        "psr/container": "^1.0",
        "ramsey/uuid": "^3.7",
        "riimu/kit-phpencoder": "^2.4",
        "symfony/console": "^5.0",
        "symfony/filesystem": "^5.0",
        "symfony/finder": "^5.0",
        "symfony/lock": "^5.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "src"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs src --standard=phpcs.xml",
        "test": "vendor/bin/phpunit test"
    }
}
