{
    "name": "jonathanmaron/fortune",
    "description": "Unix-style fortune program that displays a random quotation.",
    "license": "BSD-3-Clause",
    "type": "project",
    "require": {
        "php": "^8.3",
        "ext-intl": "*",
        "ext-json": "*",
        "psr/container": "^1.0",
        "ramsey/uuid": "^4.0",
        "riimu/kit-phpencoder": "^2.0",
        "symfony/console": "^7.0",
        "symfony/filesystem": "^7.0",
        "symfony/finder": "^7.0",
        "symfony/lock": "^7.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.7",
        "phpstan/phpstan-strict-rules": "^1.3",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/var-dumper": "^7.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src"
        },
        "files": [
            "consts.php",
            "bootstrap.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "git-pre-commit": [],
        "git-pre-push": [],
        "phpcbf": "vendor/bin/phpcbf",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "rm -fr build/phpstan && mkdir -p build/phpstan && vendor/bin/phpstan analyse --error-format=raw | tee build/phpstan/output.txt",
        "phpstan-baseline": "vendor/bin/phpstan analyse --generate-baseline",
        "qa": [
            "@phpcbf",
            "@phpcs",
            "@phpstan"
        ]
    }
}
